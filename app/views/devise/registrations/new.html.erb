<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card text-center">
      <div class="card-header">
        <h2>Create Account</h2>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field form-group">
              <%= f.text_field :name, autofocus: true, class: 'form-control border', placeholder: 'Enter your firstname and lastname' %>
            </div>

            <div class="field form-group">
              <%= f.text_field :address, class: 'form-control border', placeholder: 'Enter Address' %>
            </div>

            <div class="field form-group" >
              <%= f.date_select :date_of_birth, start_year: 1960, class: 'custom-select' %>
            </div>

            <div class="form-group" >
              <%= f.select :gender, User.genders.keys.map { |key| [key.humanize, key]}, class: 'custom-select mb-2 mr-sm-2 mb-sm-0', prompt_text: 'Select your Gender' %>
            </div>


            <div class="form-group">
              <%= f.email_field :email, class: 'form-control border', placeholder: 'Enter Email' %>
            </div>

            <div class="field form-group">
              <% if @minimum_password_length %>
                  <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control border', placeholder: 'Enter Password' %>
            </div>

            <div class="field form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control border', placeholder: 'Enter Password Again' %>
            </div>

            <div class="actions">
              <%= f.submit "Sign Up", class: 'btn btn-primary' %>
            </div>
        <% end %>

        <%# render "devise/shared/links" %>

        <div class="clearfix"></div>
        <p class="content-divider center mt-4"><span>or</span></p>

        <p class="mt-4 social-login text-center">

          <%= link_to '', user_facebook_omniauth_authorize_path, class: 'btn btn-facebook ion-social-facebook' %>
          <%= link_to '', user_google_oauth2_omniauth_authorize_path, class: 'btn btn-google ion-social-googleplus' %>
          <%= link_to '', user_linkedin_omniauth_authorize_path, class: 'btn btn-linkedin ion-social-linkedin' %>
          <%# link_to '', user_facebook_omniauth_authorize_path, class: 'btn btn-facebook ion-social-facebook' %>

          <a href="#" class="btn btn-twitter"><em class="ion-social-twitter"></em></a>
        </p>

        <p class="text-center">
          Already has an Account?
          <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %><br />
          <% end -%>
        </p>

      </div>
    </div>
  </div>
</div>
